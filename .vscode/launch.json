    // },
    {
      "name": "Run Tests",
      "type": "godot-mono",
      "request": "launch",
      "mode": "executable",
      "preLaunchTask": "build",
      "executable": "godot-mono",
      "executableArguments": [ "--path", "${workspaceRoot}", "${workspaceRoot}/scenes/TestRunner.tscn" ]
    },
